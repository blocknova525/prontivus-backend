# Prontivus Environment Configuration
# Using existing PostgreSQL database

# Application Settings
APP_NAME=Prontivus
VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production-12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration - Using existing PostgreSQL database
USE_SQLITE=false
USE_DATABASE=true
DATABASE_URL=postgresql://postgres:devil@localhost:5432/prontivus_db
DATABASE_URL_ASYNC=postgresql+asyncpg://postgres:devil@localhost:5432/prontivus_db

# PostgreSQL Production Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=prontivus_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=devil
POSTGRES_SSL_MODE=prefer

# Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# Sync Configuration
SYNC_ENABLED=true
SYNC_INTERVAL_SECONDS=300
SYNC_CONFLICT_RESOLUTION=postgresql_wins
SYNC_RETRY_ATTEMPTS=3

# Offline Configuration
OFFLINE_MODE_ENABLED=false
OFFLINE_DATA_RETENTION_DAYS=30
OFFLINE_SYNC_ON_STARTUP=false

# Redis Configuration
REDIS_URL=redis://localhost:6379

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:3001"]

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Medical System
TISS_VERSION=3.05.00
DEFAULT_TIMEZONE=America/Sao_Paulo

# Licensing
LICENSE_SIGNATURE_KEY=your-license-signature-key
OFFLINE_GRACE_PERIOD_HOURS=72

# Monitoring (Optional)
SENTRY_DSN=
